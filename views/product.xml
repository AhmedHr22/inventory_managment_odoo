<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
            <record id="product_form_view" model="ir.ui.view">
                <field name="name" >product.form</field>
                <field name="model">inventory.product</field>
                <field name="arch" type="xml">
                    <form>
                        <sheet>
                            <group>
                                <field name="name" />
                                <field name= "description"/>
                                <field name="price"/>
                            </group>
                            <group>
                                <field name="supplier_ids"/>
                            </group>
                            <group>
                                <field name="creation_date"/>
                                <field name="category_id" />
                                <field name="category_code"/>
                            </group>
                            <notebook>
                                <page string="characteristic">
                                            <field name="shape"/>
                                            <field name="quality"/>
                                            <field name="details"/>
                                            <field name="weight"/>  
                                </page>
                                <page string="budget">
                                    <group>
                                        <field name="price" />
                                        <field name="tax"/>
                                        <field name="final_price"/>
                                    </group>
                                    <group>
                                        <field name="stock_level"/>
                                        <field name="color"/>
                                        <field name="postcode"/>
                                    </group>
                                       
                                </page>
                            </notebook>
                        </sheet>
                    </form>
                </field>
            </record>
            
            <record id="product_tree_view" model="ir.ui.view">
                    <field name="name">product.tree</field>
                    <field name="model">inventory.product</field>
                    <field name="arch" type="xml">
                        <tree>
                            <field name="name" />
                            <field name="price"/>
                            <field name="description"/>
                        </tree>
                    </field>
            </record>

            <record id="product_action" model="ir.actions.act_window">
                <field name="name">product actions</field>
                <field name="res_model">inventory.product</field>
                <field name="view_mode">tree,form</field>
            </record>

    </data> 
</odoo>